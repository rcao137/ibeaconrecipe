<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_arrow_left"
        android:layout_toRightOf="@+id/ivNotif"
        android:layout_alignBottom="@+id/ivNotif"
        android:textColor="@color/app_primary_color"
        android:textStyle="italic|bold"
        android:text="" />

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tvBubble"
        android:layout_alignBottom="@id/tvBubble"        
        android:src="@drawable/cross" />

</RelativeLayout>

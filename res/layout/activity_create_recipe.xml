<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

        <TextView
        android:id="@+id/tvIFLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="90dp"
        android:text="@string/if_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/btn_add1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvIFLabel"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/tvIFLabel"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:onClick="onScanBeacon"
        android:src="@drawable/ic_add" />

    <TextView
        android:id="@+id/tvThenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_add1"
        android:layout_centerHorizontal="true"
        android:text="@string/then_label"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/btn_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvThenLabel"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/tvThenLabel"
        android:onClick="onSetAction"
        android:src="@drawable/ic_add" />

    <TextView
        android:id="@+id/tvTriggerandNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvIFLabel"
        android:layout_alignRight="@+id/btn_add2"
        android:layout_below="@+id/btn_add1"
        android:layout_marginTop="45dp"
        android:text="" 
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvSelectedBeacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_add1"
        android:layout_alignLeft="@+id/btn_add1"
        android:layout_marginBottom="30dp"
        android:text="@string/tvBeacon_lab" 
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvSelectedAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvSelectedBeacon"
        android:layout_alignBottom="@+id/tvSelectedBeacon"
        android:layout_alignLeft="@+id/btn_add2"
        android:text="@string/tvAction_lab" 
        android:textSize="12sp" />

</RelativeLayout>